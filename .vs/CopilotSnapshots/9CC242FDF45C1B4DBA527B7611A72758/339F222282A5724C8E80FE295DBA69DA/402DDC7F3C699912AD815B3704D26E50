@page "/editCustomer"
@rendermode InteractiveAuto
@inject HttpClient Http
@using BlazorApp.Models

<h3>Edit Customer</h3>

@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="alert alert-info">@statusMessage</div>
}

@if (selectedCustomer != null)
{
    <EditForm Model="selectedCustomer" OnValidSubmit="SaveEdit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Company Name</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.CompanyName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Contact Name</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.ContactName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.Address" />
        </div>

        <div class="mb-3">
            <label class="form-label">City</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.City" />
        </div>

        <div class="mb-3">
            <label class="form-label">Region</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.Region" />
        </div>

        <div class="mb-3">
            <label class="form-label">Postal Code</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.PostalCode" />
        </div>

        <div class="mb-3">
            <label class="form-label">Country</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.Country" />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone</label>
            <InputText class="form-control" @bind-Value="selectedCustomer.Phone" />
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-success" type="submit" disabled="@isSaving">Save</button>
            <button class="btn btn-secondary" type="button" @onclick="CancelEdit" disabled="@isSaving">Cancel</button>
        </div>
    </EditForm>

    <hr />
}

@if (pagedResult is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Region</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in pagedResult.Customers)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.CompanyName</td>
                <td>@c.ContactName</td>
                <td>@c.Address</td>
                <td>@c.City</td>
                <td>@c.Region</td>
                <td>@c.PostalCode</td>
                <td>@c.Country</td>
                <td>@c.Phone</td>
                <td>
                    <button class="btn btn-primary btn-sm" @onclick="() => StartEdit(c.Id)" disabled="@(selectedCustomer != null && selectedCustomer.Id == c.Id)">Edit</button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-secondary" @onclick="PreviousPage" disabled="@(!CanGoPrevious)">Previous</button>

        <span>Page @currentPage of @totalPages</span>

        <button class="btn btn-secondary" @onclick="NextPage" disabled="@(!CanGoNext)">Next</button>
    </div>
}

@code {
    private PagedResult<Customer>? pagedResult;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages;

    private Customer? selectedCustomer;
    private bool isSaving;
    private string? statusMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage();
    }

    private async Task LoadPage()
    {
        var result = await Http.GetFromJsonAsync<PagedResult<Customer>>($"api/customers?page={currentPage}&pageSize={pageSize}");
        pagedResult = result;

        if (pagedResult != null)
            totalPages = (int)Math.Ceiling((double)pagedResult.Total / pageSize);
    }

    private bool CanGoPrevious => currentPage > 1;
    private bool CanGoNext => currentPage < totalPages;

    private async Task NextPage()
    {
        if (CanGoNext)
        {
            currentPage++;
            await LoadPage();
        }
    }

    private async Task PreviousPage()
    {
        if (CanGoPrevious)
        {
            currentPage--;
            await LoadPage();
        }
    }

    private async Task StartEdit(string id)
    {
        statusMessage = null;
        try
        {
            var cust = await Http.GetFromJsonAsync<Customer>($"api/customers/{id}");
            if (cust == null)
            {
                statusMessage = "Customer not found.";
                return;
            }
            selectedCustomer = cust;
        }
        catch (Exception ex)
        {
            statusMessage = ex.Message;
        }
    }

    private void CancelEdit()
    {
        selectedCustomer = null;
    }

    private async Task SaveEdit()
    {
        if (selectedCustomer == null) return;
        isSaving = true;
        statusMessage = null;
        try
        {
            var response = await Http.PutAsJsonAsync("api/customers", selectedCustomer);
            if (response.IsSuccessStatusCode)
            {
                statusMessage = "Customer updated.";
                selectedCustomer = null;
                await LoadPage();
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                statusMessage = $"Error: {response.StatusCode} - {content}";
            }
        }
        catch (Exception ex)
        {
            statusMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }
}
